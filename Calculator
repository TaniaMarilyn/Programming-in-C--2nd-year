#include<stdio.h>
void main()
{
    int a,b;
    printf("enter any numbers:");
    scanf("%d%d",&a,&b);
    char op;
    printf("\n enter symbol:");
    scanf(" %c",&op);
    switch(op)
    {
        case'+':
            printf("the addition is %d",a+b);
            break;
        case'-':
            printf("the subtraction is %d",a-b);
            break;
        case'*':
            printf("the multiplication is %d",a*b);
            break;
        case'/':
            printf("the division is %d",a/b);
            break;
        case'%':
            printf("the modulo is %d",a%b);
            break;
        default:
            printf("wrong choice");

    }
}
